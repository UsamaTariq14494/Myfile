<!DOCTYPE html>
<html lang="en">
<head>
  <div class = "container">
<div class="jumbotron">

  <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

  <body>
  <section id="cover" class="min-vh-50">
    <div id="cover-caption">
        <div class="container">
            <div class="row text">
                <div class="mx-auto text-center form p-1">
                    <h3 class="display-5 py-3 text-truncate"></h3>
<%= form_for ([@category,@product]) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :required=> true, :autofocus=> true,  :placeholder => "Enter Product Name"  %>
  </div>

<div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, :required=> true, :min=>"0", :placeholder => "Enter Price" %>
  </div>

<div class="field">
  <%= form.label :images %>
  <%= form.file_field :images, multiple: true %>


  <div class="actions">
    <%= form.submit %>
  </div>
  </html>
<% end %>
