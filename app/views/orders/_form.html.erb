              </div>

              <div class="form-group">
                <%=form.hidden_field :status%>
              </div>
              <label for="payment_type">Choose a Method:</label>
              <%=form.select :payment_type, ['VISA', 'MasterCard', 'Cash']%>

              </salect>

              <div class="actions">
                <%=form.submit %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
